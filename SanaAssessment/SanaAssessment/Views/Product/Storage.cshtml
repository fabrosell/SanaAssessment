@model Storage


@{
    ViewBag.Title = "Change Storage";
}

<h2>Change Storage</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Storage", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Name, Storage.GetAvailableStorages(), htmlAttributes: new { @class = "control-label col-md-10" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change Storage" class="btn btn-default" />
            </div>
        </div>
    </div>
}


